<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>byeByeBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.ByeByeBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bikeBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.BikeBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>	
	<managed-bean>
		<managed-bean-name>carBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.CarBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.UserBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<!-- FROM Welcome page -->
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createUserForm</from-outcome>
			<to-view-id>/createUserForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createCarForm</from-outcome>
			<to-view-id>/createCarForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>	
	
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createBikeForm</from-outcome>
			<to-view-id>/createBikeForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>userDetails</from-outcome>
			<to-view-id>/userDetails.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.carList}</from-outcome>
			<to-view-id>/carList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{bikeList}</from-outcome>
			<to-view-id>/bikeList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>vehicleList</from-outcome>
			<to-view-id>/vehicleList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM CreateCar -->
	<navigation-rule>
		<display-name>createCarForm.xhtml</display-name>
		<from-view-id>/createCarForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{carBean.createCar}</from-outcome>
			<to-view-id>/showCarResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>createCarForm.xhtml</display-name>
		<from-view-id>/createCarForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<!-- FROM CreateBike -->
	<navigation-rule>
		<display-name>createBikeForm.xhtml</display-name>
		<from-view-id>/createBikeForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{bikeBean.createBike}</from-outcome>
			<to-view-id>/showBikeResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>createBikeForm.xhtml</display-name>
		<from-view-id>/createBikeForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- FROM CarList -->
	<navigation-rule>
		<display-name>carList.xhtml</display-name>
		<from-view-id>/carList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>carList.xhtml</display-name>
		<from-view-id>/carList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.getCarFromList}</from-outcome>
			<to-view-id>/carInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM CarInfo -->
	<navigation-rule>
		<display-name>carInfo.xhtml</display-name>
		<from-view-id>/carInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM BikeList -->
	<navigation-rule>
		<display-name>bikeList.xhtml</display-name>
		<from-view-id>/bikeList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>bikeList.xhtml</display-name>
		<from-view-id>/bikeList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.getBikeFromList}</from-outcome>
			<to-view-id>/bikeInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM BikeInfo -->
	<navigation-rule>
		<display-name>bikeInfo.xhtml</display-name>
		<from-view-id>/bikeInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM CreateUser -->
	<navigation-rule>
		<display-name>createUserForm.xhtml</display-name>
		<from-view-id>/createUserForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{UserBean.createUser}</from-outcome>
			<to-view-id>/showUserResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>	
	
	<navigation-rule>
		<display-name>createUserForm.xhtml</display-name>
		<from-view-id>/createUserForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>createUserForm.xhtml</display-name>
		<from-view-id>/createUserForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>userError</from-outcome>
			<to-view-id>/userError.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM UserDetails -->
	<navigation-rule>
		<display-name>userDetails.xhtml</display-name>
		<from-view-id>/userDetails.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM UserError -->
	<navigation-rule>
		<display-name>userError.xhtml</display-name>
		<from-view-id>/userError.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>userError.xhtml</display-name>
		<from-view-id>/userError.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{userBean.createUser}</from-outcome>
			<to-view-id>/createUserForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- FROM UserResult -->
	<navigation-rule>
		<display-name>showUserResult.xhtml</display-name>
		<from-view-id>/showUserResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createCarForm</from-outcome>
			<to-view-id>/createCarForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>showUserResult.xhtml</display-name>
		<from-view-id>/showUserResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createBikeForm</from-outcome>
			<to-view-id>/createBikeForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<display-name>showUserResult.xhtml</display-name>
		<from-view-id>/showUserResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM CarResult -->
	<navigation-rule>
		<display-name>showCarResult.xhtml</display-name>
		<from-view-id>/showCarResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- FROM BikeResult -->
	<navigation-rule>
		<display-name>showBikeResult.xhtml</display-name>
		<from-view-id>/showBikeResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>carInfo.xhtml</display-name>
		<from-view-id>/carInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.sellCar}</from-outcome>
			<to-view-id>/showSellResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>bikeInfo.xhtml</display-name>
		<from-view-id>/bikeInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.sellBike}</from-outcome>
			<to-view-id>/showSellResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>bikeInfo.xhtml</display-name>
		<from-view-id>/bikeInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.sellBike}</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>carInfo.xhtml</display-name>
		<from-view-id>/carInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{byeByeBean.sellCar}</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>error.xhtml</display-name>
		<from-view-id>/error.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>showSellResult.xhtml</display-name>
		<from-view-id>/showSellResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
