<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>ownerBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.OwnerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>carBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.CarBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bikeBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.BikeBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>platformBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.PlatformBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>welcomeBank.xhtml</display-name>
		<from-view-id>/welcomeBank.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createOwnerForm</from-outcome>
			<to-view-id>/createOwnerForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>createOwnerForm.xhtml</display-name>
		<from-view-id>/createOwnerForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{ownerBean.createOwner}</from-outcome>
			<to-view-id>/showOwnerResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeBank.xhtml</display-name>
		<from-view-id>/welcomeBank.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createCarForm</from-outcome>
			<to-view-id>/createCarForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>showOwnerResult.xhtml</display-name>
		<from-view-id>/showOwnerResult.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createCarForm</from-outcome>
			<to-view-id>/createCarForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeBank.xhtml</display-name>
		<from-view-id>/welcomeBank.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createBikeForm</from-outcome>
			<to-view-id>/createBikeForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>createBikeForm.xhtml</display-name>
		<from-view-id>/createBikeForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{bikeBean.createBike}</from-outcome>
			<to-view-id>/showVehiculeResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>createCarForm.xhtml</display-name>
		<from-view-id>/createCarForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{carBean.createCar}</from-outcome>
			<to-view-id>/showVehiculeResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeBank.xhtml</display-name>
		<from-view-id>/welcomeBank.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>carList</from-outcome>
			<to-view-id>/carList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>carList.xhtml</display-name>
		<from-view-id>/carList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{platformBean.getCarFromList}</from-outcome>
			<to-view-id>/carInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeBank.xhtml</display-name>
		<from-view-id>/welcomeBank.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{platformBean.getCarList}</from-outcome>
			<to-view-id>/carList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
