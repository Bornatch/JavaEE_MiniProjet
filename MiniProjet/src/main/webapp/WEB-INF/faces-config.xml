<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>ByeByeBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.ByeByeBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>AdminBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.AdminBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>BikeBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.BikeBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>	
	<managed-bean>
		<managed-bean-name>CarBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.CarBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>UserBean</managed-bean-name>
		<managed-bean-class>ch.byebyecar.managedbeans.UserBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<!-- FROM Welcome page -->
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createUserForm</from-outcome>
			<to-view-id>/createUserForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createCarForm</from-outcome>
			<to-view-id>/createCarForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>	
	<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createBikeForm</from-outcome>
			<to-view-id>/createBikeForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		<navigation-rule>
		<display-name>welcome.xhtml</display-name>
		<from-view-id>/welcome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>vehicleList</from-outcome>
			<to-view-id>/vehicleList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<!--  ABOUT User -->
	<navigation-rule>
		<display-name>createUserForm.xhtml</display-name>
		<from-view-id>/createUserForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<!--  CREATE Vehicles -->
	<navigation-rule>
		<display-name>createCarForm.xhtml</display-name>
		<from-view-id>/createCarForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcomeBank</from-outcome>
			<to-view-id>/welcomeBank.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>createBikeForm.xhtml</display-name>
		<from-view-id>/createBikeForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>	
	
	<!--  Vehicle LIST -->
	<navigation-rule>
		<display-name>vehicleList.xhtml</display-name>
		<from-view-id>/vehicleList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>	
	<navigation-rule>
		<display-name>vehicleInfo.xhtml</display-name>
		<from-view-id>/vehicleInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>vehicleList</from-outcome>
			<to-view-id>/vehicleList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>	
</faces-config>
