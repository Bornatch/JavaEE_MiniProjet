<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="PlatformPU">
		<jta-data-source>java:/labsDS</jta-data-source>
		
		<class>ch.byebyecar.businessobject.User</class>
		<class>ch.byebyecar.businessobject.Car</class>
		<class>ch.byebyecar.businessobject.Bike</class>
		<class>ch.byebyecar.businessobject.Vehicle</class>
		<class>ch.byebyecar.businessobject.Address</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" /> 
			<property name="dialect" value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
		</properties>
	</persistence-unit>
</persistence>
